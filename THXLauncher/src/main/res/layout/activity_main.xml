<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/thxl_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#00000000"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="18"
            android:background="#B3FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF4C5CF1"
                android:text="@string/title"
                android:textColor="#FFFF"
                android:textSize="20sp"
                tools:ignore="InefficientWeight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/choose_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:text="@string/account" />

                <ImageButton
                    android:id="@+id/account_add"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:onClick="account_add"
                    app:srcCompat="@android:drawable/ic_menu_sort_by_size"
                    tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck,UsingOnClickInXml,ImageContrastCheck"
                    tools:srcCompat="@android:drawable/ic_menu_sort_by_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights">

            </View>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#616FED"
                android:text="@string/start"
                android:textColor="#FFFFFF"
                tools:ignore="TextContrastCheck,TextContrastCheck">

            </Button>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="32"
            android:background="#66FFFFFF">

        </TextView>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:background="#994052F6"
            android:orientation="vertical"
            tools:ignore="MissingConstraints,UselessLeaf">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#004C5CF1"
                android:onClick="games"
                android:text="@string/game"
                android:textColor="#FFFF"
                android:textSize="20sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#004C5CF1"
                android:onClick="download"
                android:text="@string/download"
                android:textColor="#FFFF"
                android:textSize="20sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#004C5CF1"
                android:onClick="setting"
                android:text="@string/setting"
                android:textColor="#FFFF"
                android:textSize="20sp"
                tools:ignore="UsingOnClickInXml" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#004C5CF1"
                android:onClick="about"
                android:text="@string/about"
                android:textColor="#FFFF"
                android:textSize="20sp"
                tools:ignore="TextContrastCheck,UsingOnClickInXml" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>